# These files automatically update when edited/saved in vim:

# keys    filename                                description
bf      ${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-files    # This file, a list of bookmarked files
bd      ${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs     # A list of bookmarked directories similar to this file
cfxr     ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources   # Colors, themes, and variables for X11
cfxi     ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xinitrc      # X11 initialization configuration
cfxp     ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xprofile     # X11 profile
cfb     $HOME/.local/src/dwmblocks/config.h                 # dwmblocks: the status bar for dwm
cfst    $HOME/.local/src/st-sx/config.h                     # st-sx configuration (terminal)
cfdw    $HOME/.local/src/dwm/config.h                       # dwm configuration

# These do not update automatically, but on the next new instance of a program:
cfz     $ZDOTDIR/.zshrc                     # zsh (shell) configuration
cfa     ${XDG_CONFIG_HOME:-$HOME/.config}/shell/aliasrc     # Aliases used by zsh (and potentially other shells)
cfp     $ZDOTDIR/.zprofile                  # Profile file for login settings for zsh
cfh     $HOME/.zshenv                       # zsh environment file
cfm     ${XDG_CONFIG_HOME:-$HOME/.config}/mutt/muttrc       # mutt (email client) configuration
cfmb    ${XDG_CONFIG_HOME:-$HOME/.config}/ncmpcpp/bindings  # ncmpcpp (music player) keybinds file
cfmc    ${XDG_CONFIG_HOME:-$HOME/.config}/ncmpcpp/config    # ncmpcpp (music player) configuration
cfll    ${XDG_CONFIG_HOME:-$HOME/.config}/lf/lfrc           # lf (file browser) configuration
cflp    ${XDG_CONFIG_HOME:-$HOME/.config}/lf/scripts/previewer     # lf's preview file
cflc    ${XDG_CONFIG_HOME:-$HOME/.config}/lf/commands              # lf commands configuration
cflm    ${XDG_CONFIG_HOME:-$HOME/.config}/lf/mappings              # lf mappings configuration
cflo    ${XDG_CONFIG_HOME:-$HOME/.config}/lf/opener                # lf opener configuration
cfls    ${XDG_CONFIG_HOME:-$HOME/.config}/lf/settings              # lf settings configuration
cfX     ${XDG_CONFIG_HOME:-$HOME/.config}/nsxiv/exec/key-handler   # nsxiv (image viewer) key/script handler
cfA     ${XDG_DATA_HOME:-$HOME/.local/share}/larbs/snippets        # Snippets for larbs
cf3     ${XDG_CONFIG_HOME:-$HOME/.config}/gtk-3.0/settings.ini     # GTK 3 configuration
cf2     ${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc-2.0        # GTK 2 configuration
cfL     ${XDG_CONFIG_HOME:-$HOME/.config}/lynx/lynx.cfg            # Lynx (text browser) configuration
cfP     ${XDG_CONFIG_HOME:-$HOME/.config}/picom/picom.conf         # Picom (compositor) configuration
cfT     ${XDG_CONFIG_HOME:-$HOME/.config}/tmux/tmux.conf           # tmux (terminal multiplexer) configuration
cfn     ${XDG_CONFIG_HOME:-$HOME/.config}/newsboat/config          # newsboat (RSS reader) configuration
cfu     ${XDG_CONFIG_HOME:-$HOME/.config}/newsboat/urls            # RSS URLs for newsboat
cfk     ${XDG_CONFIG_HOME:-$HOME/.config}/newsboat/keys            # Configuration keys for newsboat
cfvi    ${XDG_CONFIG_HOME:-$HOME/.config}/nvim/init.lua            # neovim configuration
cfvo    ${XDG_CONFIG_HOME:-$HOME/.config}/nvim/lua/options.lua     # Options configuration for Neovim
cfva    ${XDG_CONFIG_HOME:-$HOME/.config}/nvim/lua/autocmd.lua     # Autocommands for Neovim
cfvm    ${XDG_CONFIG_HOME:-$HOME/.config}/nvim/lua/mappings.lua    # Key mappings for Neovim
cfvp    ${XDG_CONFIG_HOME:-$HOME/.config}/nvim/lua/plugins/init.lua # plugins configuration Neovim
