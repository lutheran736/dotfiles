#!/bin/sh

# Show wifi status with Nerd Fonts icons and percentage or disconnected icon
# Show ethernet connection status with Nerd Fonts icons
# Show lock icon if VPN is active

case $BLOCK_BUTTON in
1)
  "$TERMINAL" -e nmtui
  pkill -RTMIN+4 dwmblocks
  ;;
3) notify-send "ðŸŒ Internet Module" "\- Click to connect
ï‘§: wifi disabled
ï‡«: no wifi connection
ï‡«: wifi connection with quality
ïœ: ethernet disconnected
ï›¿: ethernet connected
ï€£: VPN active
" ;;
6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Wifi status check
if cat /sys/class/net/w*/operstate 2>/dev/null | grep -q 'up'; then
  wifiicon="$(awk '/^\s*w/ { print "ï‡« ", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif cat /sys/class/net/w*/operstate 2>/dev/null | grep -q 'down'; then
  if cat /sys/class/net/w*/flags 2>/dev/null | grep -q '0x1003'; then
    wifiicon="ï‡« " || wifiicon="ï‘§ "
  fi
fi

# Wifi

# Ethernet status check
[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethericon="ï›¿" || ethericon="ï‘§ "

# VPN status check (TUN/Wireguard)
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ï€£ "
[ -n "$(cat /sys/class/net/*wg*/operstate 2>/dev/null)" ] && tunicon="ï€£ "

printf "%s%s%s\n" "$wifiicon" "$ethericon" "$tunicon"
